@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
     <div class="row pt-4">
         <div class="col-6">
             <h1 class="text-primary">items view</h1>
         </div>
         <div class="col-6 text-end">
            <a asp-controller="Items" asp-action="New" class="btn btn-primary"> <i class="bi bi-plus-circle" style="position: relative; top: -3px;"></i> &nbsp; Add New Items </a>
        </div>

     </div>

</div>

<table class="table  table-bordered table-striped border=1 thead table-hover" style="width:100%";  border="1">
    <thead class="table-dark">
        <tr>
            <th scope="col">
                #
            </th> 
            <th scope="col">
                Item Name
            </th>
            <th scope="col">
                Item Price
            </th> 
            <th scope="col">
                Date created
            </th> 
            <th scope="col">
               
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-info">
                <td >
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>  
                <td>
                    @item.Price
                </td>
                <td >
                    @item.Created
                </td>  
                <td >
                    <a asp-controller="Items" asp-action="Edit" asp-route-id="@item.Id" class="btn  btn-outline-success"> <i class="bi bi-pencil-square" style="position: relative; top: -3px;"></i> &nbsp; Edit </a>
                &nbsp;
                    <a asp-controller="Items" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"> <i class="bi bi-trash" style="position: relative; top: -3px;"></i> &nbsp; Delete  </a>

                </td>
            </tr>
        }

       
    </tbody>
</table>